<h1>Editing Book</h1>
<div>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <div class="field">
    <%= f.text_field :title %>
  </div>

  <h5>Opinion</h5>
  <div class="field">
    <%= f.text_area :body%>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

  <div class="book-link">
    <%= link_to "Show", book_path(@book.id) %>
  |
    <%= link_to "Back", books_path %>
  </div>

<% end %>