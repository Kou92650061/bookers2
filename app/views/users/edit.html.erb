<h2>User info</h2>
  <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

  <p>Name</p>


  <div class="field">
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>

  <p>Image</p>
  <div class="field">
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>

  <p>Introduction</p>
  <div class="field">
    <%= f.text_field :introduction %>
  </div>

  <%= f.submit "Update User" %>
<% end %>