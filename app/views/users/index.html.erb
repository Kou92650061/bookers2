<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', book: @new, user: @user %>
    <div class="col-md-8 offset-md-1">

      <h2>Users</h2>
      <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td class="user-image">
               <%= image_tag user.get_image(100,100) %>
              </td>
              <td class="user-name">
               <%= user.name %>
              </td>
              <td class="book-link">
                <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>