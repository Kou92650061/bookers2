
<div class="container px-5 px-sm-0">
  
  <div class="row">
    <%= render 'books/list', book: @new, user: @user %>
    
    <div class="col-md-8 offset-md-1">
      
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td class="user-image">
                <%= link_to user_path(book.user.id) do %>
                 <%= image_tag book.user.get_image(100,100) %>
                <% end %>
               
              </td>
              <td class="book-title">
               <%= link_to book.title, book_path(book.id) %>
              </td>
              <td class="book-body">
               <%= book.body %>
              </td>
            </tr>
          </tbody>
          <% end %>
      </table>

    </div>
  </div>
</div>
